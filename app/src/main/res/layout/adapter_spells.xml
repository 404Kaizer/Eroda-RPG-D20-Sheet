<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/spells_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:background="@color/darker_gray"
        android:clickable="true">

        <TextView
            android:id="@+id/spells_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="5dp"
            android:textSize="20sp"
            android:text="Exemplo"
            />

        <TextView
            android:id="@+id/spells_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spells_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="5dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="Exemplo"/>

        <TextView
            android:id="@+id/spells_lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/spells_type"
            app:layout_constraintStart_toEndOf="@id/spells_type"
            app:layout_constraintBottom_toBottomOf="@id/spells_type"
            android:layout_marginHorizontal="8dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="Exemplo"/>

        <TextView
            android:id="@+id/spells_components"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spells_type"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="5dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="Exemplo"/>

        <TextView
            android:id="@+id/spells_execution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spells_components"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="5dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="Exemplo"/>

        <TextView
            android:id="@+id/spells_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spells_execution"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="5dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="Exemplo"/>

        <TextView
            android:id="@+id/spells_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spells_range"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="5dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="Exemplo"/>

        <TextView
            android:id="@+id/spells_resistence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spells_duration"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="5dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="Exemplo"/>

        <TextView
            android:id="@+id/spells_costs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spells_resistence"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="5dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="Exemplo"/>

        <TextView
            android:id="@+id/spells_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spells_costs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/spells_buffs"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:textSize="16sp"
            android:text="Exemplo"/>

        <TextView
            android:id="@+id/spells_buffs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spells_description"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Exemplo"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/delete_spells"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_delete_drawable"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>