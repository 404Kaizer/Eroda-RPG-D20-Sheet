<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CharInventoryFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/top_tab_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/dark_gray"
        app:tabTextColor="@color/teal_700"
        app:tabIndicatorColor="@color/red"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/white">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/backpack_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mochila" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/stored_itens_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardados" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_tab_nav"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/money_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp"
            android:background="#1C1C1C">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Dinheiro"
                android:textSize="22sp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/wallet"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@id/money"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/stored_money"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:background="@color/black"
                android:hint="Na Carteira"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/stored_money"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@id/money"
                app:layout_constraintStart_toEndOf="@id/wallet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:background="@color/black"
                android:hint="Guardado"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/backpack_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/money_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="15dp"
            android:padding="10dp"
            android:background="#1C1C1C">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/backpack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Mochila"
                android:textSize="22sp"/>

            <androidx.appcompat.widget.AppCompatEditText android:inputType="textMultiLine" android:importantForAutofill="no"
                android:id="@+id/backpack_input"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="10dp"
                android:gravity="start|top"
                android:fadeScrollbars="false"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:nestedScrollingEnabled="true"
                android:padding="10dp"
                android:hint="Itens que você carrega..."
                app:layout_constraintTop_toBottomOf="@id/backpack"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stored_itens_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/backpack_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="15dp"
            android:padding="10dp"
            android:background="#1C1C1C">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/stored_itens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Itens Guardados"
                android:textSize="22sp"/>

            <androidx.appcompat.widget.AppCompatEditText android:inputType="textMultiLine" android:importantForAutofill="no"
                android:id="@+id/stored_itens_input"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="10dp"
                android:gravity="start|top"
                android:fadeScrollbars="false"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:nestedScrollingEnabled="true"
                android:padding="10dp"
                android:hint="Itens que você não carrega..."
                app:layout_constraintTop_toBottomOf="@id/stored_itens"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>