<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CharPerfilFragment"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_infos_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/dark_gray"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/char_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                android:text="Sanin"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="22sp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/perfil_infos_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/char_name"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/char_race"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humano"
                    android:textSize="20sp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/char_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7dp"
                    android:text="Samurai"
                    android:textSize="20sp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/char_lvl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="20sp"
                    android:textStyle="italic"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/char_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/perfil_infos_container"
                android:layout_marginVertical="5dp"
                android:src="@drawable/portrait_char11"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:paddingTop="80dp"/>

            <EditText android:importantForAutofill="no" android:inputType="text"
                android:id="@+id/input2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toBottomOf="@id/char_img"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:hint="Escreva sua Tendência"
                android:textColorHint="@color/teal_700"
                android:backgroundTint="@color/white" />

            <EditText android:importantForAutofill="no" android:inputType="text"
                android:id="@+id/input3"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toBottomOf="@id/input2"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:hint="Escreva sua Raça e Sexo"
                android:textColorHint="@color/teal_700"
                android:backgroundTint="@color/white" />

            <EditText android:importantForAutofill="no" android:inputType="text"
                android:id="@+id/input4"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toBottomOf="@id/input3"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:hint="Escreva seu Tamanho e Idade"
                android:textColorHint="@color/teal_700"
                android:backgroundTint="@color/white" />

            <EditText android:importantForAutofill="no" android:inputType="text"
                android:id="@+id/input5"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toBottomOf="@id/input4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:hint="Escreva seus Idiomas Conhecidos"
                android:textColorHint="@color/teal_700"
                android:backgroundTint="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/char_caracteristics_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/main_infos_container"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:background="@color/dark_gray"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/char_personality_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Personalidade"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText android:importantForAutofill="no" android:inputType="textMultiLine"
                android:id="@+id/char_personality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="start|top"
                android:padding="8dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:hint="Escreva o que você gosta ou não, suas qualidades e defeitos..."
                android:textColorHint="@color/teal_700"
                android:background="@drawable/edittext_border_color"/>

            <TextView
                android:id="@+id/char_fears_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Medos e Fobias"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText android:importantForAutofill="no" android:inputType="textMultiLine"
                android:id="@+id/char_fears"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="start|top"
                android:padding="8dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:hint="Escreva o que te amedronta..."
                android:textColorHint="@color/teal_700"
                android:background="@drawable/edittext_border_color"/>

            <TextView
                android:id="@+id/char_background_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="História e Objetivos"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText android:importantForAutofill="no" android:inputType="textMultiLine"
                android:id="@+id/char_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="start|top"
                android:padding="8dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:hint="Escreva sua história e o que deseja alcançar..."
                android:textColorHint="@color/teal_700"
                android:background="@drawable/edittext_border_color"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>