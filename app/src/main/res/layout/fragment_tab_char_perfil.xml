<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TabCharPerfilFragment"
    android:fillViewport="true"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/dark_gray"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/char_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/char_img"
            android:layout_marginTop="5dp"
            android:text="Hazard Lefou"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/char_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/char_name"
            android:layout_margin="10dp"
            android:src="@drawable/ic_char_img"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <EditText android:importantForAutofill="no" android:inputType="text"
            android:id="@+id/input1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintTop_toBottomOf="@id/char_img"
            app:layout_constraintBottom_toTopOf="@id/input2"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:hint="Escreva sua Classe e Antecedente"
            android:textColorHint="@color/teal_700"
            android:backgroundTint="@color/white"/>

        <EditText android:importantForAutofill="no" android:inputType="text"
            android:id="@+id/input2"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintTop_toBottomOf="@id/input1"
            app:layout_constraintBottom_toTopOf="@id/input3"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:hint="Escreva sua Tendência"
            android:textColorHint="@color/teal_700"
            android:backgroundTint="@color/white"
            />

        <EditText android:importantForAutofill="no" android:inputType="text"
            android:id="@+id/input3"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintTop_toBottomOf="@id/input2"
            app:layout_constraintBottom_toTopOf="@id/input4"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:hint="Escreva sua Raça e Sexo"
            android:textColorHint="@color/teal_700"
            android:backgroundTint="@color/white"
            />

        <EditText android:importantForAutofill="no" android:inputType="text"
            android:id="@+id/input4"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintTop_toBottomOf="@id/input3"
            app:layout_constraintBottom_toTopOf="@id/input5"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:hint="Escreva seu Tamanho e Idade"
            android:textColorHint="@color/teal_700"
            android:backgroundTint="@color/white"
            />

        <EditText android:importantForAutofill="no" android:inputType="text"
            android:id="@+id/input5"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintTop_toBottomOf="@id/input4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:hint="Escreva seus Idiomas Conhecidos"
            android:textColorHint="@color/teal_700"
            android:backgroundTint="@color/white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>